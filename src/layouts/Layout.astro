---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { Image, getImage } from "astro:assets";
import favicon from "../images/favicon.png";
const optimizedBackgroundImage = await getImage({ src: favicon })
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Upgrade Solutions" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={optimizedBackgroundImage.src} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
